@model TwentyFirst.Common.Models.Articles.ArticleDeleteViewModel

@{
    ViewData["Title"] = "Изтрий новина";
}

<h1 class="text-center text-danger">Наистина ли искате да изтриете тази новина?</h1>

<hr />

<div class="row h5">
    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Lead" class="control-label"></label>
            <input asp-for="Lead" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="form-control" rows="20" disabled></textarea>
        </div>
    </div>

    <div class="col-md-4">
        <div class="container m-3">
            <div class="row">
                @if (Model.IsTop)
                {
                    <span class="col-md-3">&#10004;</span>
                }
                else
                {
                    <span class="col-md-3">&#10008;</span>
                }
                <div class="col-md-9">@Html.DisplayNameFor(model => model.IsTop)</div>
            </div>

            <div class="row">
                @if (Model.IsImportant)
                {
                    <span class="col-md-3">&#10004;</span>
                }
                else
                {
                    <span class="col-md-3">&#10008;</span>
                }
                <div class="col-md-9">@Html.DisplayNameFor(model => model.IsImportant)</div>
            </div>
        </div>

        <!-- Categories -->
        @if (Model.Categories.Any())
        {
        <div class="card bg-light  mb-3">
            <div class="card-header">Категории</div>
            @foreach (var category in Model.Categories)
                {
            <div class="card-body">
                <p class="card-text">@category</p>
            </div>
                }
        </div>
        }


        <p id="show-image">
            <img src="@Model.ImageThumbUrl" />
        </p>
    </div>
    <form asp-action="Delete" method="post" asp-route-id="@Model.Id">
        <div class="fixed-bottom bg-dark">
            <div class="form-group w-25 mx-auto my-1">
                <input type="submit" value="Изтрий" class="btn btn-lg btn-danger text-light" />
                <a asp-action="Index" class="btn btn-lg btn-secondary">Излез</a>
            </div>
        </div>
    </form>
</div>

