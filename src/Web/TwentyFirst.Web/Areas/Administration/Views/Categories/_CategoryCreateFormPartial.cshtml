@model TwentyFirst.Common.Models.Categories.CategoryCreateInputModel

<!-- Modal for edit category-->
<div class="modal show" id="create-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-area="Administration" asp-controller="Categories" asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLabel">Добави категория</h5>
                    <div class="form-row justify-content-center">
                        <div class="col-auto">
                            <input asp-for="Name" class="form-control mb-2" placeholder="Наименование">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary exit" data-dismiss="modal">Затвори</button>
                    <button type="submit" class="btn btn-primary">Запази</button>
                </div>
            </form>
        </div>
    </div>
</div>