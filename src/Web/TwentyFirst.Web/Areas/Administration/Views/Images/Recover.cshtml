@model TwentyFirst.Common.Models.Images.ImageUrlBaseViewModel

@{
    ViewData["Title"] = "Възстанови снимка";
}

<h1 class="text-danger">Наистина ли искате да възстановите тази снимка?</h1>
<hr />
<img src="@Model.Url" />

<form asp-action="Recover" method="post" asp-route-id="@Model.Id">
    <div class="fixed-bottom bg-dark">
        <div class="form-group w-25 mx-auto my-1">
            <input type="submit" value="Възстанови" class="btn btn-lg btn-warning text-light" />
            <a asp-action="Index" class="btn btn-lg btn-secondary">Излез</a>
        </div>
    </div>
</form>
