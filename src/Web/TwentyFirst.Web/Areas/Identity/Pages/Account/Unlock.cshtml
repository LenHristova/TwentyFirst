@page
@model UnlockModel
@{
    ViewData["Title"] = "Отключване на акаунт";
}

<div class="container">
    <hr />
    <h4 class="text-center text-danger">Наистина ли искате да отключите акаунта на @Model.UserToUnlock.Username?</h4>
    <form method="post" asp-route-userId="@Model.UserToUnlock.Id">
        <div class="row justify-content-center my-5">
            <button type="submit" class="btn btn-danger text-white w-50 mx-auto">Отключи</button>
        </div>
    </form>
</div>